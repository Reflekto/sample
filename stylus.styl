@import '../../styles/helpers/variables.styl'
@import '../../styles/helpers/mixins.styl'
.accordion
	display block

	&__wrap
		position relative
		margin-right -30px
		margin-left -40px
		padding-y 25px
		padding-right 30px
		padding-left 43px
		overflow hidden
		cursor pointer

		+below($responsivePhone)
			margin-right 0

		&:hover
			.accordion__title
				color $c-strong-blue

	&__title
		padding-left 101px
		font-size 1.2rem
		font-weight 300
		color $c-black

		&_offset
			padding-left 51px

	&__content
		margin-right -30px
		padding-top 11px
		padding-right 135px
		padding-left 103px
		display block
		overflow hidden
		box-sizing content-box
		max-width 700px
		height 0
		opacity 0
		transition opacity .3s, height .2s ease

		+below($responsiveTabletSmall)
			margin-right 0
			padding-x 0

		&_offset
			padding-left 56px

	&__text
		font-size .8rem
		font-weight 400
		color $c-dark-gray

	&__content_open
		opacity 1

	&__arrow
		position absolute
		top 27px
		width 23px
		height 22px
		transition transform .1s
		transform rotate(0deg) translateZ(0)

	&__icon-wrapper
		position absolute
		top 27px
		left 87px
		width 23px
		height 22px

	&__icon
		position absolute
		z-index 4
		top 50%
		left 2px
		margin-top -12px
		display block
		width 23px
		height 22px
		color $c-strong-blue
		transition transform .1s
		transform translateY(0) translateZ(0)

		&_hand-remote
			height 24px

		&_checklist
			top 54%
			height 20px

		&_files
			top 40%
			height 24px

		&_laptop
			top 40%

		&_machine
			top 58%
			height 20px

		&_office-graph
			height 21px

	&__wrap_active &__icon_arrow
		transition transform .15s
		transform rotate(180deg) translateZ(0)

	&_type_faq
		.accordion__title
			padding-left 37px

		.accordion__content
			padding-left 41px

		.accordion__wrap:not(:first-child)
			margin-top 0

		.accordion__text
			font-size .9rem
			color $c-black

	&_type_results
		.accordion__wrap:not(:first-child)
			margin-top 0

	&__link
		color $c-strong-blue
		&:hover
			text-decoration none
